<div class="mt-4">
    <div class="row">
        {{#each courses}}
            <div class="col mb-4">
                <div class="col-sm-6 col-lg-4">
                    <div class="card course-card" style="width: 18rem;">
                        <a href="/courses/{{this.slug}}">
                            <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
                        </a>
                        <div class="card-body course-card-body">
                            <a href="/courses/{{this.slug}}">
                                <h5 class="card-title">{{this.name}}</h5>
                            </a>
                            <p class="card-text course-description">{{this.description}}</p>
                            <a href="#" class="btn btn-primary btn-learn-now">H·ªçc ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
